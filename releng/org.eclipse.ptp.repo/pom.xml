<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.ptp</groupId>
		<artifactId>ptp-parent</artifactId>
		<version>6.0.0-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<version>6.0.0-SNAPSHOT</version>
	<artifactId>org.eclipse.ptp.repo</artifactId>
	<packaging>eclipse-repository</packaging>

	<profiles>
		<profile>
			<id>production</id>
			<properties>
				<ptp-install>/home/data/httpd/download.eclipse.org/tools/ptp/builds/hudson/ptp-nightly</ptp-install>
			</properties>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy</id>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<mkdir dir="${ptp-install}" />
										<delete>
											<fileset dir="${ptp-install}">
												<include name="**" />
											</fileset>
										</delete>
										<copy file="target/org.eclipse.ptp.repo.zip"
											tofile="${ptp-install}/org.eclipse.ptp.repo.${unqualifiedVersion}.${buildQualifier}.zip" />
										<unzip src="target/org.eclipse.ptp.repo.zip" dest="${ptp-install}" />
										<copy todir="${ptp-install}">
											<fileset
												file="${basedir}/../../rdt/org.eclipse.ptp.rdt.core.remotejars/rdt-server-aix-${unqualifiedVersion}.tar" />
											<fileset
												file="${basedir}/../../rdt/org.eclipse.ptp.rdt.core.remotejars/rdt-server-linux-${unqualifiedVersion}.tar" />
											<fileset
												file="${basedir}/../../rdt/org.eclipse.ptp.rdt.core.remotejars/rdt-server-linux.ppc-${unqualifiedVersion}.tar" />
											<fileset
												file="${basedir}/../../rdt/org.eclipse.ptp.rdt.core.remotejars/rdt-server-linux.x86-${unqualifiedVersion}.tar" />
											<fileset
												file="${basedir}/../../rdt/org.eclipse.ptp.rdt.core.remotejars/rdt-server-macosx-${unqualifiedVersion}.tar" />
											<fileset
												file="${basedir}/../../rdt/org.eclipse.ptp.rdt.core.remotejars/rdt-server-unix-${unqualifiedVersion}.tar" />
											<fileset
												file="${basedir}/../../rdt/org.eclipse.ptp.rdt.core.remotejars/rdt-server-windows-${unqualifiedVersion}.zip" />
										</copy>
										<unzip src="${basedir}/../../releng/org.eclipse.ptp.aix.ppc/target/org.eclipse.ptp.aix.ppc-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.aix.ppc_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../releng/org.eclipse.ptp.linux.ppc/target/org.eclipse.ptp.linux.ppc-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.linux.ppc_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../releng/org.eclipse.ptp.linux.x86/target/org.eclipse.ptp.linux.x86-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.linux.x86_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../releng/org.eclipse.ptp.linux.x86_64/target/org.eclipse.ptp.linux.x86_64-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.linux.x86_64_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../releng/org.eclipse.ptp.macosx.ppc/target/org.eclipse.ptp.macosx.ppc-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.macosx.ppc_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../releng/org.eclipse.ptp.macosx.x86/target/org.eclipse.ptp.macosx.x86-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.macosx.x86_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../debug/org.eclipse.ptp.debug.sdm/target/org.eclipse.ptp.debug.sdm-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.debug.sdm_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../core/org.eclipse.ptp.proxy/target/org.eclipse.ptp.proxy-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.proxy_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../core/org.eclipse.ptp.utils/target/org.eclipse.ptp.utils-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.utils_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../rms/org.eclipse.ptp.rm.ibm.ll.proxy/target/org.eclipse.ptp.rm.ibm.ll.proxy-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.rm.ibm.ll.proxy_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../rms/org.eclipse.ptp.rm.ibm.pe.proxy/target/org.eclipse.ptp.rm.ibm.pe.proxy-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.rm.ibm.pe.proxy_${unqualifiedVersion}.${buildQualifier}"/>
										<unzip src="${basedir}/../../rms/org.eclipse.ptp.rm.slurm.proxy/target/org.eclipse.ptp.rm.slurm.proxy-${version}.jar" dest="${ptp-install}/proxy/org.eclipse.ptp.rm.slurm.proxy_${unqualifiedVersion}.${buildQualifier}"/>
										<zip destfile="${ptp-install}/ptp-proxy-${unqualifiedVersion}-${buildQualifier}.zip">
											<fileset dir="${ptp-install}">
												<include name="proxy/**/*" />
											</fileset>
										</zip>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
