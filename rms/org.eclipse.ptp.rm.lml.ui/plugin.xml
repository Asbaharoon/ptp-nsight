<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.eclipse.ptp.rm.lml.ui.views"
            name="%ParallelViewCategory.name">
      </category>
      <view
            allowMultiple="true"
            category="org.eclipse.ptp.rm.lml.ui.views"
            class="org.eclipse.ptp.rm.lml.ui.views.NodesView"
            icon="icons/parallel_perspective.gif"
            id="org.eclipse.ptp.rm.lml.ui.views.NodesView"
            name="org.eclipse.ptp.rm.lml.ui.views.NodesView"
            restorable="false">
      </view>
      <view
            category="org.eclipse.ptp.rm.lml.ui.views"
            class="org.eclipse.ptp.rm.lml.ui.views.LMLView"
            icon="icons/rm/rm_view.gif"
            id="org.eclipse.ptp.rm.lml.ui.views.LMLView"
            name="%LMLView.name">
      </view>
      <view
            allowMultiple="true"
            category="org.eclipse.ptp.rm.lml.ui.views"
            class="org.eclipse.ptp.rm.lml.ui.views.TableView"
            icon="icons/parallel_perspective.gif"
            id="org.eclipse.ptp.rm.lml.ui.views.TableView"
            name="org.eclipse.ptp.rm.lml.ui.views.TableView"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.ptp.rm.lml.internal.ui.LMLRuntimePerspectiveFactory"
            icon="icons/parallel_perspective.gif"
            id="org.eclipse.ptp.rm.lml.ui.LMLRunPerspective"
            name="%Perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.ptp.rm.lml.ui.menu.category1"
            name="Menu">
      </category>
      <command
            categoryId="org.eclipse.ptp.rm.lml.ui.menu.category1"
            defaultHandler="org.eclipse.ptp.rm.lml.ui.actions.HideTableColumnAction"
            id="org.eclipse.ptp.rm.lml.ui.menu.command1"
            name="Menu">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.eclipse.ptp.rm.lml.ui.menu.command1"
            icon="icons/parallel.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ptp.rm.lml.ui.main.toolbar?after=additions">
         <toolbar
               id="org.eclipse.ptp.rm.lml.ui.toolbar1">
            <command
                  commandId="org.eclipse.ptp.rm.lml.ui.menu.command1"
                  id="org.eclipse.ptp.rm.lml.ui.menu.toolbar1.command1"
                  style="pulldown"
                  tooltip="Send them a message!">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
